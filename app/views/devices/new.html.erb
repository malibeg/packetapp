<h1>New Device</h1>

<%= form_tag devices_path, :method => :create do %>
  <div class="field">
      <%= label_tag :hostname %>
      <%= text_field_tag :hostname %>
  </div>
  <div class="field">
      <%= label_tag :operating_system %>
      <%= select_tag :operating_system, options_for_select(@oses) %>
  </div>
  <div class="field">
      <%= label_tag :plan %>
      <%= select_tag :plan, raw("<option>t1.small.x86</option>") %>
  </div>
  <div class="field">
      <%= label_tag :facility %>
      <%= select_tag :facility, options_for_select(@facilities) %>
  </div>
  <%= csrf_meta_tags %>
  <div class="actions">
   <%= submit_tag 'Save' %>
  </div>
<% end %>

<%= link_to 'Back', devices_path %>
